@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center flex-wrap" style="min-height: 100vh;">
    @foreach (var item in Model)
    {
        <div class="card shadow-sm m-2" style="width: 280px; border: none;">
            <img src="@item.ImageUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@item.Title" />

            <div class="card-body text-center d-flex flex-column">
                <h5 class="text-uppercase text-dark fw-bold">@item.Title</h5>
                <p class="mb-1 text-muted" style="font-size: 0.9rem;">by <span class="text-warning fw-semibold">@item.Author</span></p>

                <p class="mb-1 text-muted" style="text-decoration: line-through;">List Price: $@item.ListPrice</p>
                <p class="mb-3 text-dark fw-semibold">As low as: $@item.Price100</p>

                <a asp-action = "Details" asp-route-id ="@item.Id" class="btn btn-primary w-100 mt-auto">Details</a>
            </div>
        </div>

    }
</div>
