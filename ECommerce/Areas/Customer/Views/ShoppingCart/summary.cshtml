@using ECommerce.Models.ViewModels
@model ShoppingCartVM
<form asp-action="summary" method="post">
<div class="container my-5">
    <div class="card card-custom">
        <div class="card-header header-custom d-flex justify-content-between align-items-center p-3">
            <h1 class="h4 mb-0">Shopping Cart</h1>
            <a asp-action = "Index" class="btn btn-back-to-cart btn-sm">BACK TO CART</a>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-lg-6">
                    <h2 class="h5 mb-4 text-primary-custom">Shipping Details:</h2>
   
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input asp-for = "@Model.OrderHeader.Name" class="form-control" />
                            <span asp-validation-for = "@Model.OrderHeader.Name"></span>
                        </div>
                        <div class="mb-3">
                           <label for="name" class="form-label">Phone</label>
                            <input asp-for = "@Model.OrderHeader.PhoneNumber" class="form-control" />
                             <span asp-validation-for = "@Model.OrderHeader.PhoneNumber"></span>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Street Adress</label>
                            <input asp-for = "@Model.OrderHeader.StreetAddress" class="form-control" />
                             <span asp-validation-for = "@Model.OrderHeader.StreetAddress" class = "text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label">City</label>
                            <input asp-for = "@Model.OrderHeader.City" class="form-control" />
                             <span asp-validation-for = "@Model.OrderHeader.City" class = "text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="state" class="form-label">State</label>
                            <input asp-for = "@Model.OrderHeader.State" class="form-control" />
                             <span asp-validation-for = "@Model.OrderHeader.State" class = "text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="postal-code" class="form-label">Postal Code</label>
                            <input asp-for = "@Model.OrderHeader.PostalCode" class="form-control" />
                             <span asp-validation-for = "@Model.OrderHeader.PostalCode" class = "text-danger"></span>
                        </div>
                   
                </div>
                <div class="col-lg-6">
                    <h2 class="h5 mb-4 text-primary-custom">Order Summary:</h2>
                    @foreach (var item in Model.shoppingCartList)
                    {
                    <div class="d-flex justify-content-between mb-2">
                        <span>@item.Product.Title</span>
                        <span class="fw-bold">@((item.Price*item.Count).ToString("c"))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                            <span>Quantity: @item.Count</span>
                        <span></span>
                    </div>
                    }
                 

                    <div class="total-section pt-3 d-flex justify-content-between align-items-center">
                        <span class="text-primary-custom fw-bold">Total (USD)</span>
                        <span class="text-primary-custom fw-bold fs-5">@Model.OrderHeader.OrderTotal</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center p-4">
            <div class="text-muted small">Estimate Arrival Date:</div>
                <input type="submit" value="PLACE ORDER" class="btn btn-primary" />
        </div>
    </div>
</div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}