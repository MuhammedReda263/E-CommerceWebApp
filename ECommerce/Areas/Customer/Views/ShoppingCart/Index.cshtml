@using ECommerce.Models.ViewModels
@model ShoppingCartVM
<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-gradient text-white" style="background-color:aquamarine;">
            <h5 class="mb-0">Shopping Cart</h5>
        </div>

        <div class="card-body">
            <a asp-area="Customer" asp-controller ="Home" asp-action ="Index" class="btn btn-outline-dark mb-4">CONTINUE SHOPPING</a>
            @foreach (var item in Model.shoppingCartList)
            {
                <!-- Cart Item -->
                <div class="row align-items-center text-start border-top pt-3">
                    <div class="col-md-2">
                        <img src="@item.Product.ImageUrl" alt="Product Image" class="img-fluid rounded shadow-sm">
                    </div>

                    <div class="col-md-4">
                        <h6 class="fw-bold text-uppercase mb-1">@item.Product.Title</h6>
                        <p class="text-muted mb-1">@item.Product.Description</p>
                    </div>

                    <div class="col-md-3 d-flex justify-content-center align-items-center">
                        <div class="input-group input-group-sm" style="width: 120px;">
                            <a asp-action ="minus" asp-route-cartid="@item.Id" class="btn btn-outline-secondary" type="button">-</a>
                            <a asp-action="plus" asp-route-cartid="@item.Id" class="btn btn-outline-secondary" type="button">+</a>
                        </div>
                    </div>

                    <div class="col-md-1 text-center">
                        <span class="text-muted small">@item.Product.Price<br>x @item.Count</span>
                    </div>

                    <div class="col-md-2 text-end">
                        <a asp-action="remove" asp-route-cartid="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            }
            

            <!-- Divider -->
            <hr class="my-4">

            <!-- Total -->
            <div class="row align-items-center">
                <div class="col-md-9 text-end">
                    <h5 class="fw-bold">TOTAL (USD)</h5>
                </div>
                <div class="col-md-1 text-start">
                    <h5 class="fw-bold">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                </div>
                <div class="col-md-2">
                   
                        <a asp-action="summary" class="btn btn-primary w-100"> Summary </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
