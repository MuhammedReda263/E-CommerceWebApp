@model List<Category>
<div class="card">
	<div class="card-header">
		<div class="container ">
			<div class="row pt-2 pb-2 ">
				<div class="col-6">
					<h2 class="text-primary">
						Category List
					</h2>

				</div>
			</div>
		</div>
	</div>

	<div class="card-body pb-0">
		<div class="col-12 text-end pb-3">
		<a asp-controller="Category" asp-action="Create" class="btn btn-success">
			<i class="bi bi-plus-circle-fill p-2"></i> Create New Category
		</a>
	</div>
		<table class="table table-bordered table-hover">

			<tr class="bg-light">
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>

				<th>
					Edit
				</th>

				<th>
					Delete
				</th>
			</tr>

			@foreach (var item in Model.OrderBy(o => o.DisplayOrder))
			{
				<tr>
					<td>
						@item.Name
					</td>

					<td>
						@item.DisplayOrder
					</td>

					<td>
						<a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary">
							<i class="bi bi-pencil me-2"></i> Edit
						</a>
					</td>

					<td>
						<a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" onclick="return confirmDelete ('@item.Name');" class="btn btn-danger">
							<i class="bi bi-trash3 me-2"></i> Delete
						</a>
					</td>
				</tr>
			}
		</table>
	</div>
</div>


<script>
	function confirmDelete(ItemName) {
		return confirm("Are you sure you want to delete "+ItemName+" category?");
	}
</script>